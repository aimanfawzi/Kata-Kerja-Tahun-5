<body>

<canvas id="gameCanvas" width="920" height="480"></canvas>

<div id="uiBox">Tekan <b>Space</b> untuk jawab soalan</div>

<div id="questionBox">
    <h3 id="qText"></h3>
    <div id="choices"></div>
    <button class="btn" onclick="closeQuestion()">Tutup</button>
</div>

<script>
/* ============================
      RPG GAME ENGINE SIMPLE
   ============================ */

const canvas = document.getElementById("gameCanvas");
const ctx = canvas.getContext("2d");

// PLAYER
let player = {
    x: 80,
    y: 350,
    width: 40,
    height: 60,
    speed: 4
};

let keys = {};
document.addEventListener("keydown", e => (keys[e.key] = true));
document.addEventListener("keyup", e => (keys[e.key] = false));

// NPC location
let npc = { x: 500, y: 340, width: 50, height: 70 };

// QUESTION BANK
const bank = {
    easy: [
        { q: "Ali _____ buku.", c: ["membaca", "berlari"], a: 0 },
        { q: "Kucing itu _____.", c: ["melompat", "makan nasi"], a: 0 }
    ],
    medium: [
        { q: "Siti memotong _____.", c: ["kek", "lari"], a: 0 },
        { q: "Ayah menulis _____", c: ["surat", "pergi"], a: 0 }
    ],
    hard: [
        { q: "Ayat manakah yang mengandungi kata kerja transitif?", c: ["Ali makan nasi.", "Ali tidur."], a: 0 },
        { q: "Ayat manakah tak transitif?", c: ["Kucing tidur.", "Siti memotong kek."], a: 0 }
    ]
};

let stage = "easy";

// MAIN LOOP
function gameLoop() {
    update();
    draw();
    requestAnimationFrame(gameLoop);
}

function update() {
    if (keys["ArrowRight"]) player.x += player.speed;
    if (keys["ArrowLeft"]) player.x -= player.speed;

    if (player.x < 0) player.x = 0;
    if (player.x > canvas.width - player.width)
        player.x = canvas.width - player.width;

    if (
        player.x + player.width > npc.x - 20 &&
        player.x < npc.x + npc.width + 20
    ) {
        document.getElementById("uiBox").style.display = "block";
        if (keys[" "]) openQuestion();
    } else {
        document.getElementById("uiBox").style.display = "none";
    }
}

function draw() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);

    ctx.fillStyle = "#7dd87d";
    ctx.fillRect(0, 420, canvas.width, 80);

    ctx.fillStyle = "#1f6feb";
    ctx.fillRect(player.x, player.y, player.width, player.height);

    ctx.fillStyle = "orange";
    ctx.fillRect(npc.x, npc.y, npc.width, npc.height);

    ctx.fillStyle = "black";
    ctx.font = "16px Poppins";
    ctx.fillText("Tahap: " + stage.toUpperCase(), 20, 30);
}

// QUESTION SYSTEM
function openQuestion() {
    let qset = bank[stage];
    let q = qset[Math.floor(Math.random() * qset.length)];

    document.getElementById("qText").innerText = q.q;

    let ch = document.getElementById("choices");
    ch.innerHTML = "";

    q.c.forEach((choice, i) => {
        let btn = document.createElement("div");
        btn.className = "choiceBtn";
        btn.innerText = choice;
        btn.onclick = () => checkAnswer(i, q.a);
        ch.appendChild(btn);
    });

    document.getElementById("questionBox").style.display = "block";
}

function checkAnswer(i, correct) {
    if (i === correct) {
        alert("Betul! Tahniah!");
        if (stage === "easy") stage = "medium";
        else if (stage === "medium") stage = "hard";
        else alert("Anda telah tamat semua tahap!");
    } else {
        alert("Salah, cuba lagi!");
    }

    closeQuestion();
}

function closeQuestion() {
    document.getElementById("questionBox").style.display = "none";
}

gameLoop();
</script>

</body>
</html>

